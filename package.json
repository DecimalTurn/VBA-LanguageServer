{
	"name": "vba-lsp",
	"description": "A language server for VBA",
	"author": "SSlinky",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/SSlinky/TBC"
	},
	"publisher": "SSlinky",
	"categories": [
		"Programming Languages",
		"Snippets",
		"Linters",
		"Formatters"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:vba"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "vba",
				"aliases": [
					"VBA",
					"vba"
				],
				"extensions": [
					".bas",
					".cls",
					".frm"
				]
			}
		],
		"configuration": {
			"type": "object",
			"title": "Default configuration",
			"properties": {
				"vbaLanguageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"vbaLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "verbose",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"grammars": [
			{
				"language": "vba",
				"scopeName": "source.vba",
				"path": "./syntaxes/vba.json"
			}
		],
		"snippets": [
			{
				"language": "vba",
				"path": "./snippets/vba.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.13.0",
		"mocha": "^9.2.1",
		"typescript": "^4.7.2"
	}
}
